<!DOCTYPE html>
<html lang="en">
   <head>
      <!-- basic -->
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">

      <title>Shoes Shop</title>
      <link rel="stylesheet" type="text/css" href="/css/style.css">


   </head>
   <!-- body -->
   <body >
	<!-- header section start -->
	<%- include('../partials/navbar'); %>
   <!-- <div class="collection_text">Home Page</div> -->
    <div class="layout_padding gallery_section">
    	<div class="container">
    		<div class="row">
				<% product.forEach(pd=> { %>
					<div class="col-sm-4">
						<div class="best_product">
							<a href="/product/<%= pd.id %>">
								<p class="best_text"><%=pd.product_name%></p> 
								<% const img_product = Buffer.from(pd.product_img).toString('base64'); %>
								<div class="product_img"><img src="data:image/jpg;base64,<%=img_product%> "></div> 
                      			<div class="left_part" style="color: blue;"><%= pd.product_name%></div>
								<div><span class="product_price"><%= pd.product_price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></span></div>
							</a>
						</div>
					</div>
				<% }) %>
			</div>
    	</div>
    </div>

    <%- include('../partials/footer'); %>

   </body>
   
<script src="/js/jquery.min.js"></script>

<script src="/js/addtocart.js"></script>

<script src="/js/countproducttocart.js"> </script> 
</html>